    </div>

    <!-- Grid 2 kolom untuk Include & Exclude -->
    <div class="grid md:grid-cols-2 gap-6 mb-6">
      <!-- Kolom SUDAH TERMASUK -->
      <div class="bg-white p-6 rounded-3xl shadow-sm border-t-4 border-emerald-500">
        <h3 class="text-lg font-bold text-emerald-700 mb-6 flex items-center gap-3">
          <svg class="w-7 h-7 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
