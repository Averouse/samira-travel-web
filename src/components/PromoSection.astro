<script>
  const promoImages = document.querySelectorAll<HTMLElement>('[data-promo-image]');
  const promoLightbox = document.getElementById('promoLightbox')!;
  const promoLightboxImage = document.getElementById('promoLightboxImage') as HTMLImageElement;
  const closePromoLightbox = document.getElementById('closePromoLightbox')!;

  promoImages.forEach(item => {
    item.addEventListener('click', () => {
      promoLightboxImage.src = item.dataset.promoImage!;
      promoLightbox.classList.remove('hidden');
      promoLightbox.classList.add('flex');
      document.body.style.overflow = 'hidden';
    });
  });

  const closePromoHandler = () => {
    promoLightbox.classList.add('hidden');
    promoLightbox.classList.remove('flex');
    document.body.style.overflow = 'auto';
  };

  closePromoLightbox.addEventListener('click', closePromoHandler);

  promoLightbox.addEventListener('click', (e) => {
    if (e.target === promoLightbox) {
      closePromoHandler();
    }
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !promoLightbox.classList.contains('hidden')) {
      closePromoHandler();
    }
  });
</script>