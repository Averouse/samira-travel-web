---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

// Data Poster Haji Furoda
const furodaPoster = {
    name: "Haji Furoda 2025",
    front: "public/PaketFuroda1.jpg", // Ganti dengan path asli
    back: "", // Kosong - tidak ada gambar belakang
    price: "USD 29.500",
    duration: "20 Hari",
    route: "Jakarta-Jeddah-Madinah-Makkah",
    departure: ""
};
---

<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Haji Furoda 2025 - Samira Travel</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Plus+Jakarta+Sans:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body class="bg-slate-50 font-sans">
    <Navbar />
    
    <div class="bg-samira-dark text-white pt-32 pb-16">
        <div class="container mx-auto px-4 text-center">
            <h1 class="font-serif text-4xl md:text-5xl font-bold mb-4">{furodaPoster.name}</h1>
            <p class="text-samira-gold text-xl font-bold tracking-widest uppercase italic">{furodaPoster.duration} {furodaPoster.route}</p>
        </div>
    </div>

    <section class="container mx-auto px-4 py-12">
        <div class="flex flex-col lg:flex-row gap-12">
            
            <!-- SISI KIRI: POSTER (CLICK TO ZOOM) -->
            <div class="w-full lg:w-5/12">
                <div class="sticky top-24">
                    <div class="bg-white p-4 rounded-3xl shadow-xl border border-gray-100 group cursor-pointer btn-open-modal" 
                         data-name={furodaPoster.name} 
                         data-front={furodaPoster.front} 
                         data-back={furodaPoster.back}>
                        <div class="relative overflow-hidden rounded-2xl mb-4 aspect-3/4 bg-gray-100">
                            <img src={furodaPoster.front} alt="Poster Haji Furoda" class="w-full h-full object-cover group-hover:scale-105 transition duration-500"/>
                            <div class="absolute inset-0 bg-black/40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                                <span class="bg-white text-samira-dark px-6 py-3 rounded-full font-bold shadow-xl">Zoom Brosur Lengkap</span>
                            </div>
                        </div>
                        <div class="text-center p-4">
                            <p class="text-gray-500 text-sm mb-1 uppercase tracking-widest font-bold">Estimasi Harga</p>
                            <h3 class="text-3xl font-bold text-samira-dark">{furodaPoster.price}</h3>
                            {/*<p class="text-sm text-gray-400 mt-2 font-medium italic">Estimasi Keberangkatan: {furodaPoster.departure}</p>*/}
                        </div>
                    </div>
                    
                    <a href="https://wa.me/6282255680818?text=Assalamualaikum,%20saya%20tertarik%20Haji%20Furoda" class="block w-full mt-6 text-center bg-samira-green text-white py-4 rounded-2xl font-bold text-lg hover:bg-emerald-800 shadow-lg shadow-emerald-900/20 transition">
                        Daftar Haji Furoda Sekarang
                    </a>
                </div>
            </div>

            <!-- SISI KANAN: RINCIAN TEKS DETAIL -->
            <div class="w-full lg:w-7/12">
                <div class="space-y-10">
                    
                    <!-- Termasuk -->
                    <div class="bg-white p-8 rounded-3xl shadow-sm border border-gray-100">
                        <h3 class="text-xl font-bold text-emerald-700 mb-6 flex items-center gap-2 border-b pb-4">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                            Fasilitas Termasuk:
                        </h3>
                        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-600">
                            {[
                                "Tiket Pesawat Internasional P/P", "Akomodasi / Hotel sesuai program",
                                "Bus Eksklusif + Toilet di Saudi", "Makan/minum 3x sehari (Fullboard)",
                                "Welcome Food & Snack Ziarah", "Muthawwif Berbahasa Indonesia",
                                "Air Zamzam 5 Liter", "Tour Leader Bersertifikasi BNSP",
                                "Visa Haji Mujamalah", "Bagasi 23kg x 2",
                                "Asuransi Perjalanan", "Manasik Haji 4 Hari di Hotel"
                            ].map(item => (
                                <li class="flex items-start gap-2 text-sm">
                                    <span class="text-emerald-500 mt-1">â€¢</span> {item}
                                </li>
                            ))}
                        </ul>
                    </div>

                    <!-- Tidak Termasuk -->
                    <div class="bg-white p-8 rounded-3xl shadow-sm border border-gray-100">
                        <h3 class="text-xl font-bold text-red-700 mb-6 flex items-center gap-2 border-b pb-4">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                            Tidak Termasuk:
                        </h3>
                        <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-gray-500">
                            {[
                                "Biaya Pembuatan Passport", "Biaya Vaksin Meningitis",
                                "Handling & Perlengkapan Rp 1,5 Jt", "Akomodasi Transit (Jika ada)",
                                "Tiket Domestik", "Kelebihan Bagasi",
                                "Tour/Makan Tambahan", "Bill Hotel (Mini Bar, TV, dll)",
                                "Biaya Pribadi lainnya", "Biaya Tambahan Visa (Jika ada)",
                                "Surat Kesehatan Baru (Jika ada)"
                            ].map(item => (
                                <li class="flex items-start gap-2 text-xs">
                                    <span class="text-red-400 mt-1">-</span> {item}
                                </li>
                            ))}
                        </ul>
                    </div>

                    <!-- Pendaftaran & Persyaratan -->
                    <div class="bg-samira-dark text-white p-8 rounded-3xl shadow-xl">
                        <h3 class="text-xl font-bold text-samira-gold mb-6 flex items-center gap-2 border-b border-white/10 pb-4">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                            Syarat & Pendaftaran:
                        </h3>
                        <ul class="space-y-4 text-sm text-gray-200">
                            <li class="flex gap-3">
                                <span class="text-samira-gold font-bold">1.</span>
                                <span>Paspor (Nama min. 2 kata, berlaku min. 8 bulan)</span>
                            </li>
                            <li class="flex gap-3">
                                <span class="text-samira-gold font-bold">2.</span>
                                <span>FC KTP & Kartu Keluarga</span>
                            </li>
                            <li class="flex gap-3">
                                <span class="text-samira-gold font-bold">3.</span>
                                <span class="text-white font-bold">DP 15.000 USD (Refundable 100% Jika Visa tidak terbit)</span>
                            </li>
                            <li class="flex gap-3">
                                <span class="text-samira-gold font-bold">4.</span>
                                <span>Dokumen & Pelunasan H-10 Keberangkatan</span>
                            </li>
                            <li class="flex gap-3">
                                <span class="text-samira-gold font-bold">5.</span>
                                <span>Pas Foto (Latar putih, muka 80%, jilbab warna non-putih) uk. 3x4 = 2 lembar & Softcopy</span>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <!-- MODAL -->
    <div id="flyer-modal" class="fixed inset-0 z-100 hidden overflow-y-auto bg-black/95 backdrop-blur-sm p-4">
        <button id="close-modal" class="fixed top-6 right-6 z-110 bg-white rounded-full p-2 text-black shadow-2xl">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
        </button>
        <div class="flex flex-col items-center max-w-4xl mx-auto pt-10 pb-20">
            <h2 id="modal-title" class="text-white font-serif text-2xl mb-8"></h2>
            <div class="flex flex-col gap-8 w-full">
                <img id="modal-img-front" src="" class="w-full h-auto rounded-lg shadow-2xl border-2 border-white/10" />
                <img id="modal-img-back" src="" class="w-full h-auto rounded-lg shadow-2xl border-2 border-white/10" style="display: none;" />
            </div>
        </div>
    </div>

    <Footer />

    <script is:inline>
        const modal = document.getElementById('flyer-modal');
        const closeBtn = document.getElementById('close-modal');
        const modalTitle = document.getElementById('modal-title');
        const modalImgFront = document.getElementById('modal-img-front');
        const modalImgBack = document.getElementById('modal-img-back');
        const openElems = document.querySelectorAll('.btn-open-modal');

        openElems.forEach(elem => {
            elem.addEventListener('click', () => {
                const backUrl = elem.getAttribute('data-back');
                modalTitle.textContent = elem.getAttribute('data-name');
                modalImgFront.src = elem.getAttribute('data-front');
                
                if (backUrl && backUrl.trim() !== "") {
                    modalImgBack.src = backUrl;
                    modalImgBack.style.display = 'block';
                } else {
                    modalImgBack.style.display = 'none';
                }
                
                modal.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            });
        });

        const closeModal = () => {
            modal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        };

        closeBtn.addEventListener('click', closeModal);
        modal.addEventListener('click', (e) => { if (e.target === modal) closeModal(); });
    </script>
</body>
</html>